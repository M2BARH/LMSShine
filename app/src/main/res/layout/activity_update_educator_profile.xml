<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bb"
        tools:context=".UpdateEducatorProfile">

        <EditText
            android:id="@+id/uEmail"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:hint="Email Address"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/uSchoolName"
            app:layout_constraintStart_toStartOf="@+id/uSchoolName"
            app:layout_constraintTop_toBottomOf="@+id/uSchoolName" />

        <EditText
            android:id="@+id/uFullName"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:hint="Full Name"
            android:textSize="20sp"
            android:layout_marginTop="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/uSchoolName"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:hint="Full School Name"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/uFullName"
            app:layout_constraintStart_toStartOf="@+id/uFullName"
            app:layout_constraintTop_toBottomOf="@+id/uFullName" />

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:onClick="updatePfl"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="#2196F3"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uEmail" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>

